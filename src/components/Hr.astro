---
import Icon from "astro-icon";
type Props = {
  wave?: boolean;
};

const { wave = false } = Astro.props;
const waveIcon = `w${Math.floor(Math.random() * (3 - 1) + 1)}`;
---

<>
  {!wave && <hr class="border-accent" aria-hidden="true" />}
  {wave && <Icon name={waveIcon} class="text-accent" />}
</>
